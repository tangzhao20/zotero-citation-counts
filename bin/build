#!/bin/sh

cd ..

version='2.2.0'

rm -f zotero-citation-counts-v${version}.xpi
zip -r zotero-citation-counts-v${version}.xpi locale/* icons/* manifest.json bootstrap.js preferences.xhtml prefs.js zoterocitationcounts.js

# To release a new version:
# - increase version number in all files (not just here)
# - run this script to create a new .xpi file
# - commit and push to Github
# - make a release on Github, and manually upload the new .xpi file
